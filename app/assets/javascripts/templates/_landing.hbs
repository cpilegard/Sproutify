<div class="container">
  <h1> Find Gardeners near you </h1>
  <form accept-charset="UTF-8" action="/" method="post" role="form">
    <div class="form-group">
      <input class="form-control" id="address" name="landing[location]" placeholder="Street Address" size="30" type="text">
    </div>
    <div class="form-group">
      <input class="form-control" id="zip" name="landing[location]" placeholder="Zip Code" size="30" type="text">
    </div>
    <input class="btn btn-primary" id="submit" name="commit" type="submit" value="Submit">
  </form>

  <p>
    <a href="#" class="btn btn-primary signup-link" data-remote="true">Signup</a>
  </p>

  <input id="hidden_lat" type="hidden">
  <input id="hidden_lng" type="hidden">

  <div class="modal fade" id="signup-modal" role="dialog">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button aria-hidden="true" class="close" data-dismiss="modal" type="button">×</button>
          <h4 class="modal-title">Become a gardener on Sproutify!</h4>
        </div>
        <form accept-charset="UTF-8" action="/users" class="new_user" data-remote="true" id="new_user" method="post" role="form">
          <div class="modal-body">
            <div class="form-group">
              <input class="form-control" id="user_first_name" name="user[first_name]" placeholder="First Name" size="30" type="text">
            </div>
            <div class="form-group">
              <input class="form-control" id="user_last_name" name="user[last_name]" placeholder="Last Name" size="30" type="text">
            </div>
            <div class="form-group">
              <input class="form-control" id="user_email" name="user[email]" placeholder="Email" size="30" type="text">
            </div>
            <div class="form-group">
              <input class="form-control" id="user_password" name="user[password]" placeholder="Password" size="30" type="password">
            </div>
            <div class="form-group">
              <input class="form-control" id="user_password_confirmation" name="user[password_confirmation]" placeholder="Confirm Password" size="30" type="password">
            </div>
          </div>
          <div class="modal-footer">
            <input class="btn btn-primary" name="commit" type="submit" value="Signup">
          </div>
        </form>
      </div>
    </div>
  </div>

  <div class="modal fade" id="login-modal">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button aria-hidden="true" class="close" data-dismiss="modal" type="button">×</button>
          <h4 class="modal-title">Sign in to Sproutify</h4>
        </div>
        <form accept-charset="UTF-8" action="/sessions" class="new_session" data-remote="true" id="new_session" method="post" role="form">
          <div class="modal-body">
            <div class="form-group">
              <input class="form-control" id="session_email" name="session[email]" placeholder="Email" size="30" type="text">
            </div>
            <div class="form-group">
              <input class="form-control" id="session_password" name="session[password]" placeholder="Password" size="30" type="password">
            </div>
            </div>
            <div class="modal-footer">
              <input class="btn btn-primary" name="commit" type="submit" value="Login">
            </div>
        </form>
      </div>
    </div>
  </div>
</div>