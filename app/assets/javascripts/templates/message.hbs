<div id="message-{{message_id}}" class="avgrund-popup">
  <h2>{{subject}}</h2>
  <p>{{body}}</p>
  <p>-{{sender_name}}</p>
  <form action="/respond" method="post" data-remote="true">
    <input type="text" class="title" name="email_title" placeholder="Title"/>
    <textarea class="message-email-body" rows="10" cols="40" name="email_body" placeholder="Content"></textarea>
    <button type="submit" class="connect">Connect</button>
    <button class="close">Close</button>
  </form>
</div>
